{
  "name": "cypress-video-runner",
  "version": "1.0.0",
  "description": "A Dockerized Node/Express web app that runs Cypress tests and lets users preview and download run videos",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node server/index.js",
    "dev": "node --watch server/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\""
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.1",
    "glob": "^11.0.0",
    "helmet": "^8.0.0",
    "multer": "^1.4.5-lts.2",
    "nanoid": "^5.0.7",
    "winston": "^3.15.0"
  },
  "devDependencies": {
    "eslint": "^9.14.0",
    "prettier": "^3.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
